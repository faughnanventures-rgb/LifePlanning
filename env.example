# ===========================================
# Personal Strategic Plan - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ===========================================

# -------------------------------------------
# SUPABASE CONFIGURATION
# -------------------------------------------
# Find these in your Supabase dashboard:
# Settings > API > Project URL and Project API keys

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous key (safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (SERVER-SIDE ONLY - never expose to client)
# This bypasses RLS - use with extreme caution
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -------------------------------------------
# ENCRYPTION
# -------------------------------------------
# 32-byte (64 character hex) encryption key for sensitive fields
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Store this securely. If lost, encrypted data cannot be recovered.
ENCRYPTION_KEY=generate-a-64-character-hex-string-here

# -------------------------------------------
# APPLICATION
# -------------------------------------------
# Base URL of your application
# Development: http://localhost:3000
# Production: https://your-app.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------
# ANTHROPIC (Phase 3 - Configure now, use later)
# -------------------------------------------
# Your Anthropic API key for Claude integration
# Get from: https://console.anthropic.com/
# SERVER-SIDE ONLY - never expose to client
ANTHROPIC_API_KEY=sk-ant-your-key-here

# -------------------------------------------
# OPTIONAL: DEVELOPMENT
# -------------------------------------------
# Set to 'true' to enable additional logging
# DEBUG_MODE=false
